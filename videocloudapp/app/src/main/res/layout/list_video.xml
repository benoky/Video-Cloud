<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/padding1"
        android:layout_width="209dp"
        android:layout_height="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/padding2"
        android:layout_width="7dp"
        android:layout_height="128dp" />

    <TextView
        android:id="@+id/tv_videotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/padding1"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"

        android:layout_toEndOf="@+id/padding2"
        android:layout_toRightOf="@+id/padding2"
        android:text="제목"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_videoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_videotitle"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"

        android:layout_toEndOf="@+id/padding2"
        android:layout_toRightOf="@+id/padding2"
        android:text="동영상 이름"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_videonickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_videoname"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/padding2"
        android:layout_toRightOf="@+id/padding2"
        android:text="닉네임" />
</RelativeLayout>